<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventPage_image"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:background="@mipmap/pic0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Name"
        android:id="@+id/eventPage_name"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_below="@+id/eventPage_image"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/row_order"
        android:id="@+id/imageEvenetPageView2"
        android:src="@mipmap/sh"
        android:layout_below="@+id/eventPage_image"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/row_order"
        android:id="@+id/imageEvenetPageView3"
        android:src="@mipmap/wh"
        android:layout_below="@+id/eventPage_image"
        android:layout_toStartOf="@+id/imageEvenetPageView2"/>







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:id="@+id/eventPage_date"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@+id/eventPage_name"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:weightSum="3.0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <Button
            android:text="15$-25$"
            android:id="@+id/priceEventPage"
            android:background="#3F51B5"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"/>
        <Button
            android:layout_height="wrap_content"
            android:text="#Food&amp;Drink #Convention"
            android:id="@+id/eventPage_tags"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="13dp"/>

        <Button
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:text="GET TICKETS"
            android:id="@+id/button"
            android:background="#3F51B5"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/eventPage_date"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALUMINIUM CHINA is Asiaâ€˜s top trading, sourcing, networking and branding platform for the complete aluminum industry chain, bringing together leading industry figures, cutting edge technologies and advanced applications. Annually held in Shanghai, the event engages the global Aluminium community with new customized matchmaking programs linking application buyers with emerging and established demands and buyers of equipment and accessories with leading suppliers."
            android:id="@+id/eventInfoEventPage"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:textIsSelectable="false"
            />
    </ScrollView>




</RelativeLayout>