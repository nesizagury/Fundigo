<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/eventPage_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@mipmap/pic0"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/eventPage_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutTop"
        android:layout_centerHorizontal="true"
        android:text="1.2.16"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/eventPage_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventPage_date"
        android:layout_centerHorizontal="true"
        android:text="Even Gbirol 67, Tel Aviv"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="17dp"/>


    <LinearLayout
        android:id="@+id/linearLayoutTop"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eventPage_image"
        android:orientation="horizontal"
        android:weightSum="10.0">

        <ImageView
            android:id="@+id/imageEvenetPageView4"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_contacting"/>

        <ImageView
            android:id="@+id/imageEvenetPageView5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_mor_information"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:id="@+id/eventPage_name"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:gravity="fill_vertical|center_horizontal"
            android:text="The Best Show in Israel"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/imageEvenetPageView3"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:src="@mipmap/wh"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/imageEvenetPageView2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:src="@mipmap/sh"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="3.0">

        <Button
            android:id="@+id/priceEventPage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#3293CD"
            android:text="Edit Event"
            android:onClick="editEvent"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/eventPage_tags"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="#Food&amp;Drink #Convention"
            android:textColor="#000000"
            android:gravity="center"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#3293CD"
            android:onClick="openTicketsPage"
            android:text="GET TICKETS"
            android:textColor="#ffffff"
            android:gravity="center"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/eventPage_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/eventInfoEventPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="ALUMINIUM CHINA is Asiaâ€˜s top trading, sourcing, networking and branding platform for the complete aluminum industry chain, bringing together leading industry figures, cutting edge technologies and advanced applications. Annually held in Shanghai, the eventParse engages the global Aluminium community with new customized matchmaking programs linking application buyers with emerging and established demands and buyers of equipment and accessories with leading suppliers."
            android:textColor="#3c3c3c"
            android:textIsSelectable="false"
            android:textSize="17sp"/>
    </ScrollView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Real Time"
        android:id="@+id/realTime"
        android:onClick="eventOnRealtime"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>