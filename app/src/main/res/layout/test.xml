<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:id="@+id/textView7"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/nameTV"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/nameET"
        android:visibility="visible"
        android:layout_alignTop="@+id/nameTV"
        android:layout_toEndOf="@+id/nameTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:id="@+id/dateTV"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/nameET"
        android:layout_alignStart="@+id/nameTV"
        android:visibility="visible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateET"
        android:inputType="date"

        android:layout_alignTop="@+id/dateTV"
        android:layout_alignEnd="@+id/textView7"
        android:layout_toEndOf="@+id/nameTV"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:id="@+id/descriptionTV"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_below="@+id/dateET"
        android:layout_alignStart="@+id/nameTV"
        android:layout_marginTop="89dp"
        android:visibility="visible" />

   <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/descriptionET"
       android:imeActionLabel="Done"
       android:singleLine="true"
       android:layout_alignTop="@+id/descriptionTV"
       android:layout_alignEnd="@+id/nameET"
       android:layout_alignStart="@+id/textView7"
       android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:id="@+id/priceTV"
        android:textSize="23sp"
        android:layout_alignTop="@+id/nameTV"
        android:layout_toEndOf="@+id/dateTV"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/priceET"
        android:layout_alignTop="@+id/nameET"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignEnd="@+id/dateET"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:id="@+id/quantityTV"
        android:textSize="23sp"
        android:layout_alignTop="@+id/quantityET"
        android:layout_toStartOf="@+id/quantityET"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/quantityET"
        android:layout_above="@+id/dateET"
        android:layout_alignEnd="@+id/dateET"
        android:layout_alignStart="@+id/priceET"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/addressTV"
        android:textSize="23sp"
        android:layout_below="@+id/dateET"
        android:layout_toStartOf="@+id/addressET"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/addressET"
        android:imeActionLabel="Done"
        android:layout_below="@+id/dateET"
        android:layout_alignStart="@+id/quantityET"
        android:layout_alignEnd="@+id/xET"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X:"
        android:id="@+id/xTV"
        android:textSize="23sp"
        android:layout_above="@+id/descriptionET"
        android:layout_alignStart="@+id/yTV"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y:"
        android:id="@+id/yTV"
        android:textSize="23sp"
        android:layout_below="@+id/descriptionTV"
        android:layout_alignStart="@+id/dateET"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/xET"
        android:layout_alignTop="@+id/xTV"
        android:layout_toEndOf="@+id/priceTV"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/yET"
        android:layout_below="@+id/descriptionTV"
        android:layout_toEndOf="@+id/priceTV"
        android:visibility="invisible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place:"
        android:id="@+id/placeTV"
        android:textSize="23sp"
        android:layout_below="@+id/yET"
        android:layout_alignEnd="@+id/priceTV"
        android:layout_marginTop="34dp"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:imeActionLabel="Done"
        android:singleLine="true"
        android:ems="10"
        android:id="@+id/placeET"
        android:layout_alignTop="@+id/placeTV"
        android:layout_alignStart="@+id/descriptionET"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/create_imageV"
        android:background="#e8e7e7"
        android:scaleType="fitXY"
        android:layout_above="@+id/addressTV"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="image"
        android:id="@+id/imageTV"
        android:textSize="19sp"
        android:layout_above="@+id/nameET"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="browse"
        android:onClick="imageUpload"
        android:id="@+id/browse_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags:"
        android:id="@+id/tagsTV"
        android:textSize="17sp"
        android:layout_alignBottom="@+id/yTV"
        android:layout_alignEnd="@+id/addressTV"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tagsET"
        android:imeActionLabel="Done"
        android:singleLine="true"
        android:layout_below="@+id/descriptionTV"
        android:layout_alignEnd="@+id/quantityET"
        android:layout_alignStart="@+id/descriptionET"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done_button"
        android:onClick="saveEvent"
        android:layout_alignTop="@+id/placeET"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


</RelativeLayout>