<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.example.events.EventsTickets">

    <TextView
        android:id="@+id/ticketName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/seatNameTitle"
        android:layout_alignTop="@+id/price"
        android:layout_marginLeft="3dp"
        android:padding="10dp"
        android:text=""/>

    <TextView
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/eventDateTitle"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="52dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/priceTitle"
        android:layout_alignTop="@+id/eventDate"
        android:layout_marginLeft="3dp"
        android:padding="10dp"
        android:text=""/>

    <Button
        android:id="@+id/moreDetailesButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="more detailes"
        android:layout_below="@+id/purchaseDate"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/eventEnded"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/moreDetailesButton"
        android:text="Event Ended!"
        android:background="#f15d60"
        android:textColor="#ffffff"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/seatNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ticketName"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:text="Seat Name"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/priceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:padding="5dp"
        android:text="Price"
        android:layout_marginRight="25dp"
        android:layout_above="@+id/price"
        android:layout_alignStart="@+id/eventDate" />

    <TextView
        android:id="@+id/eventDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:text="Event Date"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/moreDetailesButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/eventName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:text="Purchase Date"
        android:layout_below="@+id/ticketName"
        android:layout_toEndOf="@+id/ticketName" />

    <TextView
        android:id="@+id/purchaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:padding="10dp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />
</RelativeLayout>
