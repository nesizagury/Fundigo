<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:background="@android:drawable/dialog_holo_light_frame">

    <LinearLayout
        android:id="@+id/tableRowAll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contextClickable="true"
        android:weightSum="200"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="100"
            android:background="@mipmap/pic0"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/event_date"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="20"
            android:gravity="left|fill_vertical"
            android:text="12/15/2016"
            android:textColor="#454545"
            android:paddingLeft="4dp"
            />

        <TextView
            android:id="@+id/event_name_tv"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="30"
            android:gravity="left|fill_vertical"
            android:text="The Commedy Show"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/event_location"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="25"
            android:gravity="left|fill_vertical"
            android:text="Chelnov 29, Tel Aviv"
            android:textColor="#666666"
            android:paddingLeft="4dp"
            />

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="25"
            android:baselineAligned="true"
            android:contextClickable="true"
            android:divider="#3f3232"
            android:gravity="center_vertical|left"
            android:stretchColumns="*"
            android:transitionGroup="true"
            android:weightSum="200">

            <TextView
                android:id="@+id/tags"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="110"
                android:background="@drawable/row_order1"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="#Party #Show"
                android:textColor="#71B7E6"
                android:textSize="13dp"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="45"
                android:background="@drawable/row_order1"
                android:padding="3dp"
                android:src="@mipmap/shh"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="45"
                android:background="@drawable/row_order1"
                android:padding="1dp"
                android:src="@mipmap/whh"/>
        </TableRow>
    </LinearLayout>

    <TextView
        android:id="@+id/event_price"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c8e1e1e1"
        android:gravity="center_vertical|center_horizontal"
        android:text="15$"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>