<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="340dp"
                android:background="@android:drawable/dialog_holo_light_frame">

    <LinearLayout
        android:id="@+id/tableRowAll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:contextClickable="true"
        android:orientation="vertical"
        android:weightSum="200">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="135"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="47"
            android:baselineAligned="false"
            android:contextClickable="true"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:stretchColumns="*"
            android:transitionGroup="false">

            <TextView
                android:id="@+id/event_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elegantTextHeight="false"
                android:gravity="left|fill_vertical"
                android:paddingLeft="4dp"
                android:text="12/15/2016"
                android:textColor="#454545"
                />

            <TextView
                android:id="@+id/event_name_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|fill_vertical"
                android:paddingLeft="4dp"
                android:text="The Commedy Show"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/event_location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|fill_vertical"
                android:paddingLeft="4dp"
                android:text="Chelnov 29, Tel Aviv"
                android:textColor="#666666"/>

        </LinearLayout>

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="18"
            android:baselineAligned="true"
            android:contextClickable="true"
            android:divider="#3f3232"
            android:gravity="center_vertical|left"
            android:stretchColumns="*"
            android:transitionGroup="true"
            android:weightSum="200">

            <TextView
                android:id="@+id/tags"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="110"
                android:background="@drawable/row_order1"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="#Party #Show"
                android:textColor="#71B7E6"
                android:textSize="13dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="45"
                android:background="@drawable/row_order1"
                android:padding="6dp"
                android:src="@mipmap/shh"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="45"
                android:background="@drawable/row_order1"
                android:padding="3dp"
                android:src="@mipmap/whh"
                />
        </TableRow>
    </LinearLayout>

    <TextView
        android:id="@+id/event_price"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="#c8e1e1e1"
        android:gravity="center_vertical|center_horizontal"
        android:text="150$-2000$"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:minWidth="50dp"/>

</RelativeLayout>