<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="@drawable/button_border">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:background="@mipmap/pic0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:text="12/15/2016"
        android:id="@+id/event_date"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:textColor="#454545"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="The Commedy Show"
        android:id="@+id/event_name_tv"
        android:layout_below="@+id/event_date"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|left"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-6dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:text="Chelnov 29, Tel Aviv"
        android:id="@+id/event_location"
        android:layout_below="@+id/event_name_tv"
        android:layout_alignParentStart="true"
        android:textSize="14dp"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="5dp"
        android:textColor="#666666"
        />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:stretchColumns="*"
        android:divider="#3f3232"   android:baselineAligned="false"
        android:gravity="center_vertical|left"
        android:weightSum="200"
        android:id="@+id/tableRow"
        android:contextClickable="true"
        android:transitionGroup="true"
        android:layout_below="@+id/event_location"
        android:layout_alignEnd="@+id/imageView">

        <TextView
            android:layout_width="0dip"
            android:layout_weight="110"
            android:layout_height="match_parent"
            android:text="#Party #Show"
            android:background="@drawable/row_order1"
            android:id="@+id/tags"
            android:textSize="13dp"
            android:layout_marginTop="0dp"
            android:textColor="#000000"
            android:paddingLeft="4dp"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="0dip"
            android:layout_weight="45"
            android:layout_height="match_parent"
            android:background="@drawable/row_order1"
            android:id="@+id/imageView2"
            android:src="@mipmap/shh"
            android:layout_marginTop="0dp"
            android:padding="6dp"/>

        <ImageView
            android:layout_width="0dip"
            android:layout_weight="45"
            android:layout_height="match_parent"
            android:background="@drawable/row_order1"
            android:id="@+id/imageView3"
            android:src="@mipmap/whh"
            android:layout_marginTop="0dp"
            android:padding="5dp"/>
    </TableRow>

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="15$"
        android:id="@+id/event_price"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:background="#c8e1e1e1"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/event_date"
        android:layout_marginTop="10dp"/>
</RelativeLayout>