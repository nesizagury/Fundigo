<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_capacity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hall capacity:" />

        <EditText
            android:id="@+id/et_capacity"
            android:layout_width="0dp"
            android:imeActionLabel="Done"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_parking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Parking:" />

        <EditText
            android:id="@+id/et_parking"
            android:layout_width="0dp"
            android:inputType="number"
            android:ems="10"
            android:imeActionLabel="Done"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tags:" />

        <EditText
            android:id="@+id/et_tags"
            android:layout_width="0dp"
            android:singleLine="true"
            android:imeActionLabel="Done"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_toilet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Toilet:" />

        <EditText
            android:id="@+id/et_toilet"
            android:layout_width="0dp"
            android:ems="10"
            android:imeActionLabel="Done"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
        <CheckBox
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ATM"
            android:id="@+id/checkBox"
            android:checked="false"
            android:layout_above="@+id/yET"
            android:layout_toEndOf="@+id/tagsET" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Upload picture" />

    <ImageView
        android:layout_width="150dp"
        android:id="@+id/pic"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_height="150dp" />


    <Button
        android:id="@+id/btn_next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Finish" />

</LinearLayout>